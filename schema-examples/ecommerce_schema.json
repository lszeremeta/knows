{
    "$schema": "https://raw.githubusercontent.com/lszeremeta/knows/main/schema.json",
    "nodeLabel": "Product",
    "edgeLabel": "relatedTo",
    "nodeProperties": {
        "sku": "Uuid",
        "name": "String",
        "brand": "Company",
        "description": "Sentence",
        "price": {"type": "Float", "min": 0.99, "max": 9999.99, "precision": 2},
        "originalPrice": {"type": "Float", "min": 0.99, "max": 9999.99, "precision": 2},
        "category": {"enum": ["Electronics", "Clothing", "Home", "Sports", "Books", "Beauty", "Toys", "Garden", "Automotive", "Grocery"]},
        "subcategory": "String",
        "weight": {"type": "Float", "min": 0.01, "max": 100.0, "precision": 2},
        "inStock": "Boolean",
        "stockQuantity": {"type": "Int", "min": 0, "max": 10000},
        "rating": {"type": "Float", "min": 1.0, "max": 5.0, "precision": 1},
        "reviewCount": {"type": "Int", "min": 0, "max": 50000},
        "soldCount": {"type": "Int", "min": 0, "max": 100000},
        "addedDate": "Date",
        "isFeatured": "Boolean"
    },
    "edgeProperties": {
        "similarity": {"type": "Float", "min": 0.0, "max": 1.0, "symmetric": true},
        "boughtTogether": {"type": "Int", "min": 1, "max": 10000, "symmetric": true},
        "viewedTogether": {"type": "Int", "min": 1, "max": 50000, "symmetric": true},
        "relationType": {"enum": ["similar", "complementary", "alternative", "accessory", "upgrade"]}
    },
    "computedNodeProperties": {
        "relatedProductCount": "degree"
    }
}
